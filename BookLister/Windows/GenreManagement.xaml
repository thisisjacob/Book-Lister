<Window x:Class="BookLister.Windows.GenreManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLister.Windows"
        mc:Ignorable="d"
        Title="GenreManagement" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="391*" />
            <RowDefinition Height="43*" />
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" Name="GenreList">

        </ListBox>

        <Menu Grid.Row="1" HorizontalAlignment="Center">
            <Button Name="Add" Click="AddGenre"> Add Genre </Button>
            <TextBox Name="GenreInputBox" Width="150"></TextBox>
            <Button Name="Remove" Click="RemoveGenre"> Remove Genre </Button>
            <Button Name="Submit" Click="SubmitChanges"> Submit Changes </Button>
        </Menu>

    </Grid>
</Window>
